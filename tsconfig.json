{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "module": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "outDir": "./dist/out-tsc",
        "target": "es5",
        "downlevelIteration": true,
        "alwaysStrict": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es2018",
            "esnext",
        ],
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
